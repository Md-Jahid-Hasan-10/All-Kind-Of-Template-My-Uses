//! In The Name Of Allah
#include <bits/stdc++.h>
using namespace std;

const int mod = 1e9 + 7;
const int N = 20;
const int M = (1 << N);
application -->
1.number of element y such that x|y=x ->add_super
2.number of element y such that x&y=x ->add_sub
3.number of element y such that x&y=0 ->add_super(2^bit-1)^x
4.(a1&a2&a4&a5&..&ax) = k -> add_sub(cnt[]),cnt[i]=pow(2,cnt[i])-1,remove_sub(cnt[]);

void add_super(int dp[]){
    for(int bit = 0; bit < N; bit++){
        for(int i = 0; i < M; i++){
            if(i & (1 << bit)){
                dp[i] += dp[i^(1<<bit)];
                dp[i] %= mod;
            }
        }
    }
}
void remove_super(int dp[]){
    for(int bit = 0; bit < N; bit++){
        for(int i = M-1; i >= 0; i--){
            if(i & (1 << bit)){
                dp[i] = (dp[i] - dp[i^(1<<bit)] + mod) % mod;
            }
        }
    }
}
void add_sub(int dp[]){
    for(int bit = 0; bit < N; bit++){
        for(int i = M - 1; i >= 0; i--){
            if(i & (1 << bit)){
                dp[i^(1<<bit)] += dp[i];
                dp[i^(1<<bit)] %= mod;
            }
        }
    }
}
void remove_sub(int dp[]){
    for(int bit = 0; bit < N; bit++){
        for(int i = 0; i < M; i++){
            if(i & (1 << bit)){
                dp[i^(1<<bit)] = (dp[i^(1<<bit)] - dp[i] + mod) % mod;
            }
        }
    }
}
int ar[M],cnt1[M],cnt2[M];
void Goriber_solve()
{
    int n;
    cin >> n;
    for(int i = 0; i < n; i++){
        cin >> ar[i];
        cnt1[ar[i]]++;
        cnt2[ar[i]]++;
    }
    add_super(cnt1);
    add_sub(cnt2);
    for(int i = 0; i < n; i++){
        int ans1 = cnt1[ar[i]];
        int ans2 = cnt2[ar[i]];
        int ans3 = n - cnt1[(M-1)^ar[i]];
        cout << ans1 << " " << ans2 << " " << ans3 << endl;
    }

}
signed main()
{
    Fokinnir_moto_kaj_koris_na
    int _ = 1,tc = 0;
    //cin >> _;
    while (_--)
    {
        //cout<<"Case "<<++tc<<": ";
        Goriber_solve();
    }
}
